<div class="container">
  <div class="card-deck mb-3 text-center">
    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal">Menu</h4>
      </div>
      <div class="card-body">
        <ul class="list-unstyled mt-3 mb-4">

          {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}

        </ul>
      </div>
    </div>
    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal">Devoured</h4>
      </div>
      <div class="card-body">
        <ul class="list-unstyled mt-3 mb-4">
          {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}

        </ul>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">

      <h3>Order your own Burger</h3>
      <form class="create-form">

        <div class="form-group">
          <label for="br">Burger Name:</label>
          <input type="text" id="br" name="burger_name">
        </div>

        <div class="form-group">
          <button type="submit" class="btn btn-success"> Add Burger<input type="radio" name="devoured" value="0"
              checked>

          </button>

        </div>


      </form>
    </div>
  </div>

  <footer class="pt-4 my-md-5 pt-md-5 border-top">
    <div class="row">
      <div class="col-12 col-md">
        <img class="mb-2" src="../assets/brand/bootstrap-solid.svg" alt="" width="24" height="24">
        <small class="d-block mb-3 text-muted">&copy; 2017-2020</small>
      </div>



    </div>
  </footer>
</div>